<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
<br />
<br />
<%= link_to 'New Micropost', new_micropost_path(@user) %>
<table>
	<thead>
		<tr>
			<th>Microposts</th>
			<th colspan="2"></th>
		</tr>
	</thead>
	
	<tbody>
		<% @microposts && @microposts.each do |micropost| %>
			<tr>
				<td><%= micropost.content %></td>
				<% if current_user == @user %>
					<td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
					<td><%= link_to 'Delete', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% else %>
					<td/>
					<td/>
				<% end %>
			</tr>
		<% end %>		
	</tbody>
</table>

